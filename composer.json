{
  "name": "bladevalidator/bladevalidator",
  "description": "Live form validation for Laravel Blade templates without requiring Vue, React, Alpine.js, or build tools",
  "keywords": [
    "laravel",
    "validation",
    "blade",
    "forms",
    "live-validation",
    "precognition"
  ],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Shahzaib Daniel",
      "email": "engrsk60@gmail.com"
    }
  ],
  "require": {
    "php": "^8.0"
  },
  "autoload": {
    "psr-4": {
      "BladeValidator\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "BladeValidator\\BladeValidatorServiceProvider"
      ]
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
